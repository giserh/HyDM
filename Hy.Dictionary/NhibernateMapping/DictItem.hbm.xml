<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
	<class name="Hy.Dictionary.DictItem,Hy.Dictionary" table="T_Dictionary" lazy="false" >
		<id name="ID" column="ID" type="string">
			<generator class="uuid.hex"/>
		</id>
		<property column="Name" type="String" name="Name"/>
		<property column="Code" type="String" name="Code"/>
    <many-to-one column="Parent" class="Hy.Dictionary.DictItem,Hy.Dictionary" name="Parent"/>
    <set name="SubItemsEnumerator" cascade="all" inverse="true" lazy="false">
      <key column="Parent" />
      <one-to-many class="Hy.Dictionary.DictItem,Hy.Dictionary" />
    </set>
	</class>
</hibernate-mapping>
